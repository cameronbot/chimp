.tags
- article.tag_list.each do |t|
  .tag= t.upcase
.headline
  = link_to article.headline, article.url
.brief
  %span.date
    = l article.date unless article.date.nil?
    \--
  %span.brief
    = formatted_brief article
.meta
  %span.mention
    = article.mentions.upcase if article.mentions
  %span.pub
    = article.publication.formatted_name.upcase if article.publication.formatted_name.present?
  %span.author
    = article.author.downcase.split(" ").join(".")
%br
